<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/exercise_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="16dp"
    android:elevation="4dp"
    android:background="@color/cardview_light_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/exercise_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textAlignment="center"
            android:padding="5dp"
            android:textColor="#000000"
            android:text="@string/exercise_name_cardview" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/exercise_name"
            android:background="#5b5858" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/exercise_name"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/workout_detail_record_label_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:textColor="#0d1fdf"
                android:text="@string/record_label"
                android:textSize="16sp" />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#5b5858"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/workout_detail_date_label_cardview"
                android:layout_weight="1"
                android:textSize="16sp"
                android:padding="8dp"
                android:textColor="#0d1fdf"
                android:text="@string/date_label" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>